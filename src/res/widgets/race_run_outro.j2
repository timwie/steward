{# ============================= SCRIPT MAIN ============================= #}
{% block main %}

ClientUI.ScoreTableVisibility = CUIConfig::EVisibility::ForcedHidden;

{% endblock main %}
{# ============================= SCRIPT EVENTS ============================= #}
{% block race_events %}

